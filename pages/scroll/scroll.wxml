<!--pages/scroll/scroll.wxml-->
<text>scroll组件</text>


<!-- 1.水平滚动 -->

<scroll-view class="container1" scroll-x>
  <view wx:for="{{10}}" wx:key="*this" class="item1">{{item}}</view>

</scroll-view>

<!-- 2.垂直滚动 -->

<scroll-view class="container2" scroll-y>
  <view wx:for="{{10}}" wx:key="*this" class="item2">{{item}}</view>
</scroll-view>

<!-- 其他补充 -->

<scroll-view class="container2" scroll-y bindscroll="handleScroll">
  <view wx:for="{{10}}" wx:key="*this" class="item2">{{item}}</view>
</scroll-view>
